@model ResetPassword.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body.custom-login-page {
            background-color: #fff; /* White background for the entire page */
            color: #000; /* Black text color */
            font-family: Arial, sans-serif; /* Font style */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full viewport height */
        }

        .container.custom-login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
        }

        .form-box.custom-form-box {
            background-color: #e0dae26e;
            color: #000;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgb(185 159 231 / 43%);
            width: 300px;
            padding-right: 50px;
        }

        input {
            margin-top: 10px;
        }

            input:focus {
                border-color: #3204684d !important;
            }

        h2.custom-heading {
            margin-top: 0;
            text-align: center;
        }

        .form-group.custom-form-group {
            margin-bottom: 15px;
        }

        .form-control.custom-form-control {
            width: 100%;
            padding: 10px;
            border: 0px;
            background-color: #fefbff94;
            color: #000;
        }

        .btn-primary.custom-btn-primary {
            background-color: #3204684d;
            color: #000;
            border: 0px;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 0px;
            width: 320px;
            margin-top: 10px;
        }

            .btn-primary.custom-btn-primary:hover {
                background-color: #32046869; /* Light gray on hover */
            }

        .text-danger.custom-text-danger {
            color: #ff0000; /* Red text color for validation errors */
        }
    </style>
</head>
<body class="custom-login-page">
    <div class="container custom-login-container">
        <div class="form-box custom-form-box">
            <h2 class="custom-heading">Reset Password</h2>
            <form asp-action="ResetPassword">
                <input type="hidden" asp-for="Code" />
                <div class="form-group custom-form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control custom-form-control" />
                    <span asp-validation-for="Email" class="text-danger custom-text-danger"></span>
                </div>
                <div class="form-group custom-form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control custom-form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger custom-text-danger"></span>
                </div>
                <div class="form-group custom-form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control custom-form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger custom-text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary custom-btn-primary">Reset Password</button>
            </form>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
